<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog noDataText="No Categories Found" title="Select Main Category" 	confirm="onMainCatPress"
			items="{path:'/MainCategories/'}" >
		<items>
			<ColumnListItem detailPress="onMainCatPress" id="cliItem">
				<cells>
					<Text text="{Id}"></Text>
					<Text text="{Name}"></Text>
				</cells>
				
			</ColumnListItem>
			
		</items>
		<columns>
			<Column>
				<header>
					<Text text="Category Id"/>
				</header>
			</Column>
			
				<Column>
				<header>
					<Text text="Category Name"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>